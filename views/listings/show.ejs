<%- layout("../layout/boiler.ejs") %>


<div class="row">
  <h2 class="offset-3 mt-5">Edit Listings</h2>
    <div class="col-8 offset-3 mt-5">
        <div class="card col-5" >
            <img src="<%=dataTwo.image%>" class="card-img-top" alt="listings-image">
            <div class="card-body">
              <p class="mt-2">&#8377;<%=dataTwo.price%>/night</p>
              <p class="card-text"><%=dataTwo.title%></p>
              <p><%=dataTwo.description%></p>
              <p><%=dataTwo.location%></p>
              <p><%=dataTwo.country%></p>
            </div>
          </div>

         
         <div class="row">
         <div class="col d-flex justify-content  ">
       
           <a href="/listings/<%=dataTwo._id%>/edit">
            <button class="btn btn-primary me-3">Edit</button>
           </a>
      
          <form method="POST" action="/listings/<%=dataTwo._id%>?_method=DELETE">
            <button class="btn btn-danger">delete</button>
          </form>
      
         </div>
         </div>


         <hr>

         <h3 class="mt-4">Add Reviews</h3>

         <div class="row">
          <form method="POST" action="/rev/<%=dataTwo._id%>">
          <div class="col-6 mt-4">
      
              <label class="form-label " for="">Rating</label>
            <input class="form-range mb-3" name="review[rating]" min="1" max="5" type="range">
      
            <label class="form-label" for="">Comment</label>
            <textarea class="form-control" rows="5"  name="review[comment]"id=""></textarea>
      
           <button class="btn btn-primary mt-4">Submit</button>
          </form>
         </div>

<hr class="mt-3">
         <div class="row">
          <h3 class="mt-4">Reviews</h3>
         <%for(let rev of dataTwo.reviews) {%> 
<div class="col-5 mt-4">
  
<form method="POST" action="/rev/<%=dataTwo._id%>/<%=rev._id%>?_method=DELETE">
  <div class="card-one" >
    <div class="card-body">
      <p class="card-text"><%=rev.rating%>Stars</p>
      <p><%=rev.comment%></p>
    </div>
    <button class="btn btn-danger">Delete</button>
  </div>
  
</form>
</div>
          
          <%}%>
         </div>









          
    </div>
</div>